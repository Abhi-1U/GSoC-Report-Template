% Abhi-1U : Fact Bubble
\newcommand{\factbubble}[5]{
	\begin{tikzpicture}
	\pgfmathparse{#2*2}
	\let\pbxwidth\pgfmathresult
		\filldraw[fill=#3,draw=none] (0,0) circle (#2 * 1.5);
		\filldraw[fill=#5,draw=#4, line width=3.5pt] (0,0) circle (#2 * 1.2);
		\node at (0,0) {
			\parbox{\pbxwidth cm}{
				\begin{center}	
					#1
				\end{center}
			}
		};
	\end{tikzpicture}
}
